<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_backgroud"
    tools:context=".Register">


    <EditText
        android:id="@+id/Register_Mail"
        android:layout_width="250dp"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="108dp"
        android:background="#ddffdd "
        app:hintTextColor="@color/black"
        android:ems="10"
        android:gravity="center"
        android:textColorHint="@color/black"
        android:hint="example@mail.com"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Register_password1"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:background="#ddffdd "
        app:hintTextColor="@color/black"
        android:ems="10"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:hint="Password"
        android:textColor="@color/black"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Register_Mail" />

    <EditText
        android:id="@+id/Register_password2"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:background="#ddffdd "
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        android:ems="10"
        android:textColor="@color/black"
        android:gravity="center"
        android:hint="Verify your password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Register_password1" />

    <EditText
        android:id="@+id/textInaltime"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:background="#ddffdd "
        android:textColorHint="@color/black"
        android:ems="10"
        android:gravity="center"
        android:hint="Inaltime"
        android:textColor="@color/black"
        app:hintTextColor="@color/black"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Register_password2" />

    <EditText
        android:id="@+id/textGreutate"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:background="#ddffdd "
        android:textColorHint="@color/black"
        android:ems="10"
        android:gravity="center"
        android:hint="Greutate"
        android:textColor="@color/black"
        app:hintTextColor="@color/black"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInaltime" />

    <Button
        android:id="@+id/RegisterRegister"
        android:layout_width="176dp"
        android:layout_height="70dp"
        android:layout_marginTop="148dp"
        android:textColor="@color/white"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGreutate" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="299dp"
        android:background="@drawable/circlebutton"
        android:onClick="BackToLogin"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:text="BACK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>